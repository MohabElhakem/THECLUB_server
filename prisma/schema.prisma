generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

//------------------------------
// User & Roles
//------------------------------
model User {
  id        String @id @default(uuid())
  name      String
  email     String? @unique
  password  String 
  role      Role @default(CUSTOMER)
  number    String
  address   String
  avatarUrl String?
  avatarPuplicId  String?
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role{
  ADMIN
  VENDOR
  CUSTOMER
  SUPPORT
}

